{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "env": {
    "node": true
  },
  "rules": {
    "import/order": ["error", { "alphabetize": { "order": "asc" } }]
  },
  "ignorePatterns": ["dist/"]
}
